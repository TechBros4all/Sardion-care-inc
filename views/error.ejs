<body>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Raleway:wght@400;500&display=swap');
        @import url('https://fonts.googleapis.com/css2?family=Poppins&display=swap');

        :root {
            /* colors */
            --dark: #000000;
            --light: #ffffff;
            --gray: #888888;
            /* fonts */
            --font1: 'Raleway', sans-serif;
            --font2: 'Poppins';
        }

        body {
            user-select: none;
            -moz-user-select: none;
            -webkit-user-select: none;
            scroll-behavior: smooth;
            background: var(--light);
            color: var(--dark);
            font-family: var(--font2);
        }

        * {
            margin: 0%;
            padding: 0%;
            box-sizing: border-box;
        }

        a {
            text-decoration: none;
            color: var(--dark);
            font-size: 1.2em;
        }

        .btn {
            background: var(--dark);
            color: var(--light);
            padding: 5px 10px;
            cursor: pointer;
        }
        
        button {
            border: none;
            outline: none;
        }

        main.content {
            width: 100vw;
            height: 100vh;
            overflow: hidden;
            background-size: contain;
        }

        .error-overlay {
            width: 100%;
            height: 100%;
        }

        div.inner,
        .error-text {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        div.inner {
            width: 50vw;
            height: 60vh;
            background: var(--gray);
            box-shadow: rgba(50, 50, 93, 0.25) 0px 50px 100px -20px, rgba(0, 0, 0, 0.3) 0px 30px 60px -30px, rgba(10, 37, 64, 0.35) 0px -2px 6px 0px inset;
        }

        .error-text {
            text-align: center;
            font-family: var(--font2);
        }

        .error-text h1 {
            font-size: 6em;
        }

        .error-text p {
            margin-top: -5%;
            margin-bottom: 10%;
        }

        .error-btns {
            display: flex;
            align-items: center;
            justify-content: space-between;
            width: 200px;
        }

        .error-btns a {
            font-size: 1em;
        }

        /* @media screen and (max-width: 600px) {
            div.inner {
                width: 80vw !important;
            }

            .error-text h1 {
                font-size: 5em;
            }
        }

        @media screen and (max-width: 300px) {
            .error-text h1 {
                font-size: 4em;
            }
        } */
    </style>
    <main class="content">
        <div class="error-overlay">
            <div class="inner">
                <div class="error-text">
                    <h1>404</h1>
                    <p>Whoops... page not found !!!</p>
                    <div class="error-btns">
                        <button><a onclick="goBack()" class="btn">Go back</a></button>
                        <button><a href="/" class="btn">Go Home</a></button>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <script>
        function goBack() {
            window.history.back();
        }
    </script>
</body>